# MVP Environment Configuration
# Copy this file to .env.local for local development

# Database Configuration (Required)
# For MVP: Use Neon.tech free tier PostgreSQL
# Get from: https://console.neon.tech
DATABASE_URL="postgres://username:password@ep-xxxx.neon.tech/dbname?sslmode=require"

# Frontend API Configuration
# For local development, use: http://localhost:3000/api
# For production Vercel: https://your-project.vercel.app
VITE_API_BASE_URL=http://localhost:3000/api

# WebSocket Server URL (optional - for real-time updates)
# For local development, use: ws://localhost:3000
# For production, use your deployed WebSocket URL
VITE_WS_URL=ws://localhost:3000

# Feature Flags (optional)
VITE_ENABLE_REALTIME=true
VITE_ENABLE_WEBSOCKETS=true

# Vercel Deployment (Production)
# Add these in Vercel Dashboard → Settings → Environment Variables
# DATABASE_URL=<your-neon-connection-string>
# VITE_API_BASE_URL=https://your-project.vercel.app
